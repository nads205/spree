{
  "name": "Spree Development",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/postgres:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "castwide.solargraph",
        "kaiwood.endwise",
        "misogi.ruby-rubocop",
        "hridoy.rails-snippets",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "ruby.useBundler": true,
        "ruby.useLanguageServer": true,
        "ruby.lint": {
          "rubocop": true
        },
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libpq-dev postgresql-client && bundle install",
  "postStartCommand": "bundle exec rails db:create db:migrate",
  "remoteUser": "vscode",
  "environment": {
    "RAILS_ENV": "development",
    "DB": "postgres"
  }
} 